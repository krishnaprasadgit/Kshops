
    <section>
        <div class="container mt-5">
            <div class="row">
                {{#each products}}
                <div class="col-md-3 ">
                    <div class="card" style="width: 15rem;height: 20rem">
                        <img src="/product-images/{{this._id}}.jpg"alt=""
                            class="card-img-top" alt="">
                        <div class="card-body">
                            <h5 class="card-title">{{this.Name}}</h5>
                             <p class="card-text">Rs.{{this.Price}}</p>
                            <p class="card-text">{{this.Category}}</p>
                         
                            <button onclick="addToCart('{{this._id}}')"class="btn btn-primary">Add to Cart</button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
